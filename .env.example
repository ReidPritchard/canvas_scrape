# Canvas LMS Configuration
CANVAS_URL=""
CANVAS_USERNAME=""
CANVAS_PWD=""

# Todoist Configuration (Optional)
# Set TODOIST_EXPORT to 'true' to enable Todoist integration
# Get your API key from: https://todoist.com/prefs/integrations
TODOIST_EXPORT=false
TODOIST_API_KEY=""

# Notion Configuration (Optional)
# Set NOTION_EXPORT to 'true' to enable Notion integration
# Get your API key from: https://www.notion.so/my-integrations (I think)
# Get database ID from your Notion database URL
NOTION_EXPORT=false
NOTION_API_KEY=""
NOTION_DATABASE_ID=""

# Logging Configuration (Optional)
# NODE_ENV: 'development' or 'production' (default: production)
# LOG_LEVEL: 'debug', 'info', 'warn', 'error' (default: info)
# ENABLE_FILE_LOGGING: 'true' or 'false' (default: true)
NODE_ENV=production
LOG_LEVEL=info
ENABLE_FILE_LOGGING=true

# ==========================================
# ENCRYPTION SUPPORT (Optional)
# ==========================================
# This project supports encrypted .env files using dotenvx.
# 
# To encrypt your .env file:
#   1. Create your .env file with your credentials (above)
#   2. Run: npx dotenvx encrypt
#   3. This creates an encrypted .env file and .env.keys file
#   4. Commit the encrypted .env file to version control
#   5. Keep .env.keys secure and NEVER commit it (it's git-ignored)
#
# The application automatically detects and decrypts encrypted .env files
# when a .env.keys file is present.
#
# For more information, see: https://github.com/dotenvx/dotenvx

